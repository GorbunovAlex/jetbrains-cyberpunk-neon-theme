{
  "name": "Cyberpunk Neon Theme Updated",
  "author": "Alexander Gorbunov",
  "dark": true,
  "editorScheme": "/theme/cyberpunk_neon_editor_theme.xml",
  "colors": {
    "darkBlue": "#091833",
    "normalBlue": "#133e7c",
    "anotherBlue" : "#5f5faf",
    "lightBlue": "#0abdc6",
    "lightPink": "#ea00d9",
    "darkPink": "#711c91",
    "defaultForeground": "lightBlue",
    "defaultBackground": "darkBlue",
    "defaultBorder": "darkBlue",
    "selectedForeground": "lightPink",
    "selectedBackground": "darkPink",
    "selectedBorder": "lightPink",
    "red": "#f70312"
  },
  "ui": {
    "*": {
      "background": "defaultBackground",
      "foreground": "defaultForeground",
      "selectionBackground": "selectedBackground",
      "selectionForeground": "defaultForeground",
      "inactiveBackground": "defaultBackground",
      "selectionInactiveBackground": "normalBlue",
      "selectionBackgroundInactive": "normalBlue"
    },
    "Borders": {
      "color" : "normalBlue",
      "ContrastBorderColor": "normalBlue"
    },
    "Button" : {
      "default": {
        "focusedBorderColor": "lightPink",
        "startBackground": "normalBlue",
        "endBackground": "normalBlue",
        "focusColor": "lightPink"
      },
      "startBackground": "darkBlue",
      "endBackground": "darkBlue",
      "focusedBorderColor": "lightPink"
    },
    "ActionButton": {
      "hoverBackground": "selectedBackground",
      "hoverBorderColor": "selectedBorder",
      "pressedBackground": "selectedBackground",
      "pressedBorderColor": "selectedBackground"
    },
    "EditorTabs": {
      "underlineColor": "lightPink",
      "hoverBackground": "normalBlue",
      "underlinedTabBackground": "normalBlue"
    },
    "Plugins": {
      "Tab": {
        "selectedForeground": "defaultForeground",
        "selectedBackground": "selectedBackground",
        "hoverBackground": "selectedBackground"
      }
    },
    "SearchEverywhere": {
      "Tab": {
        "selectedForeground": "defaultForeground",
        "selectedBackground": "selectedBackground"
      },
      "SearchField.borderColor": "normalBlue",
      "Advertiser": {
        "background": "normalBlue"
      }
    },
    "ComboBox": {
      "nonEditableBackground": "darkBlue"
    },
    "MainToolbar": {
      "Icon": {
        "background": "defaultBackground",
        "hoverBackground": "selectedBackground",
        "pressedBackground": "selectedBackground"
      },
      "Dropdown": {
        "background": "defaultBackground",
        "hoverBackground": "selectedBackground",
        "pressedBackground": "selectedBackground"
      }
    },
    "Popup": {
      "Advertiser.background": "normalBlue"
    },
    "ToolWindow": {
      "Header": {
        "background": "normalBlue"
      },
      "HeaderTab": {
        "hoverBackground": "selectedBackground",
        "hoverInactiveBackground": "lightPink",
        "underlineColor": "lightPink",
        "inactiveUnderlineColor": "lightPink",
        "underlineHeight": 2
      },
      "Button": {
        "selectedBackground": "selectedBackground",
        "selectedForeground": "defaultForeground",
        "hoverBackground": "normalBlue"
      }
    },
    "CompletionPopup": {
      "selectionBackground": "selectedBackground",
      "matchForeground": "lightPink",
      "selectionInactiveBackground": "defaultBackground"
    }
  },
  "icons": {
    "ColorPalette": {
      "Checkbox.Background.Default": "normalBlue",
      "Checkbox.Foreground.Selected": "lightPink"
    }
  }
}